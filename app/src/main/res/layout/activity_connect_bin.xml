<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConnectBin">

    <Button
        android:id="@+id/plasticBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="308dp"
        android:text="PLASTIC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ewasteBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:text="E-WASTE"
        app:layout_constraintBaseline_toBaselineOf="@+id/plasticBtn"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/wetBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="68dp"
        android:text="WET WASTE"
        app:layout_constraintEnd_toStartOf="@+id/dryBtn"
        app:layout_constraintTop_toBottomOf="@+id/plasticBtn" />

    <Button
        android:id="@+id/dryBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="76dp"
        android:text="DRY WASTE"
        app:layout_constraintBaseline_toBaselineOf="@+id/wetBtn"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/getDirectionBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:text="GET DIRECTION"
        app:layout_constraintBottom_toTopOf="@+id/ewasteBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.611"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>